# Engram API Configuration
# Copy this file to .env and set your values

# Security Settings
ENGRAM_API_SECRET_KEY=your-super-secret-api-key-here-change-this
ENGRAM_ENABLE_API_AUTH=true

# Redis Configuration
ENGRAM_REDIS_HOST=localhost
ENGRAM_REDIS_PORT=6379
ENGRAM_REDIS_PASSWORD=

# OpenAI Configuration (for memory curation)
ENGRAM_OPENAI_API_KEY=your-openai-api-key-here

# Ollama Configuration (for embeddings)
ENGRAM_OLLAMA_BASE_URL=http://localhost:11434

# Development Settings
ENGRAM_DEBUG=false
ENGRAM_CORS_ORIGINS=["http://localhost:3000","https://yourdomain.com"]

# Production Security (recommended)
# ENGRAM_ALLOWED_ORIGINS=["https://yourdomain.com"]
# ENGRAM_ENABLE_API_AUTH=true